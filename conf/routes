# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Play for Scala
GET     /products                   controllers.http.Products.list(page: Int ?= 1)
GET     /product/:ean               controllers.http.Products.details(ean: Long)
PUT     /product/:ean               controllers.http.Products.update(ean: Long)
GET     /product/:ean/edit          controllers.http.Products.edit(ean: Long)

# Hello
GET     /hello                      controllers.Application.greet(name: String)

# WebSocket
GET     /room/:nick                 controllers.Chat.showRoom(nick)
GET     /room/socket/:nick          controllers.Chat.chatSocket(nick)

# Akka in Action
GET     /goticks/events                 controllers.goticks.BoxOfficeController.events
PUT     /goticks/events                 controllers.goticks.BoxOfficeController.createEvent()
GET     /goticks/ticket/:eventNumber    controllers.goticks.BoxOfficeController.buyTicket(eventNumber: Long)