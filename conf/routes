# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# HelloWorld Practice
GET     /hello                      controllers.com.learn.controller.HelloWorld.index(n: String)

# Play for Scala
GET     /products                   controllers.Products.list

# Session Practice
GET     /session                    controllers.com.learn.controller.Session.index
POST    /upload                     controllers.com.learn.controller.Session.upload

# OAuth
GET     /oauthcallback              controllers.com.learn.controller.OAuthCallback.callback(code: Option[String], state: Option[String])
GET     /oauthgrant                 controllers.com.learn.controller.OAuthCallback.grant
GET     /oauthsuccess               controllers.com.learn.controller.OAuthCallback.success
GET     /oauthindex                 controllers.com.learn.controller.OAuthCallback.index

# Map static html
GET     /statichtml             controllers.Assets.at(path="/public", file="/htmls/session.html")